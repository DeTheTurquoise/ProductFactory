<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StandardText" parent="AppTheme">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/handwriting</item>
    </style>

    <style name="TitleText" parent="StandardText">
        <item name="android:textSize">40dp</item>
        <item name="android:fontStyle">italic</item>
        <item name="android:height">55dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BottomText" parent="AppTheme">
        <item name="android:fontStyle">italic</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
