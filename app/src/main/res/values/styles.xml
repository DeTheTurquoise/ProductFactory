<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StandardText" parent="AppTheme">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="TitleText" parent="StandardText">
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="ButtonStyle" parent="StandardText">
        <item name="android:textAlignment">center</item>
        <item name="android:panelColorBackground">#FFFFFF</item>
    </style>

    <style name="TwoButtons" parent="ButtonStyle">
        <item name="android:width">100dp</item>
    </style>

</resources>
